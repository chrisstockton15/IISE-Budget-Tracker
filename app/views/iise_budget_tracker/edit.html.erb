<%= link_to("<< Back to List", iise_budget_tracker_index_path, :class => 'back-link') %>

<div class="budget_requests edit">
    <h2>Edit Budget Request</h2>
    <%= form_for @budget_request, url: iise_budget_tracker_path, html: {:multipart => true, :method => 'put' } do |f| %>


        <div class="form group">
            <%= f.label "Payment Type" %>
            <%= f.select :paymentType, ['Student', 'Employee', 'Not Affiliated'], {class:"form-control"}%>
        </div>
        <div class="form group">
            <%= f.label "Travel Form Password" %>
            <%= f.text_field :travelFormPassowrd, {class:"form-control", placeholder:"Enter Travel Form Password"}%>
        </div>
        <div class="form group">
            <%= f.label "Statement of Purpose" %>
            <%= f.text_field :requestDescription, {class:"form-control", placeholder:"Enter statement of purpose"}%>
        </div>
        <div class="form group">
            <%= f.label "Upload Receipt" %>
            <%= f.file_field :images, multiple: true%>
        </div>
        <div class="form group">
            <%= f.label "Comments" %>
            <%= f.text_field :comments, {class:"form-control", placeholder:"Enter comments"}%>
        </div>
        <div class="form group">
            <%= f.label "Status" %>
            <%= f.select :status, ['submitted', 'processing', 'processed']%>
        </div>
        <div class="form group">
            <%= f.label "Total Price" %>
            <%= f.number_field :totalPrice, value: number_to_currency(f.object.totalPrice.to_f, delimiter: '', unit: ''), step: :any %>
        </div>
        <div class="form-buttons">
            <%= f.submit("Update Budget Request") %>
        </div>
    <div class="form-buttons">
        <%= f.submit("Update Budget Request") %>
    </div>

    <% end %>
</div>