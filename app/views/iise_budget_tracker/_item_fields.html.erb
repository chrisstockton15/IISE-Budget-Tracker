<h2>Add Item to Budget Request</h2>
<div class="form-group">
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :quantity %>
    <%= f.number_field :quantity, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :type %>
    <%= f.select :type, ["Travel", "Food", "Office Supplies", "Utilities", "Membership", "Services & Other Income", "Clothing", "Rent", "Other Expenses", "Items for Resale"], class: 'form-control' %>
  </div>
  <% link_to_remove_association "Remove Item", f %>
</div>