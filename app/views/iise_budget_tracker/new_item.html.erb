<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
	<h4 class="modal-title">Item</h4>
</div>
<div class="modal-body">
  <h2>Add Item</h2>
  <%= budget_form.fields_for :item do |item_form| %>

  <table summary="Item Form fields">
  <tr>
	<tr>
    <th>Description</th>
      <td>
        <%= item_form.text_field(:description) %>
      </td>
    </tr>
	<tr>
      <th>Price</th>
      <td>
        <%= item_form.number_field(:price)%>
      </td>
    </tr>
	<tr>
    <th>Quantity</th>
      <td>
        <%= item_form.number_field(:quantity) %>
      </td>
    </tr>
	<tr>
    <th>Type of Item</th>
      <td>
        <%= item_form.select :type, ["Travel", "Food", "Office Supplies", "Utilities", "Membership", "Services & Other Income", "Clothing", "Rent", "Other Expenses", "Items for Resale"]%>
      </td>
    </tr>
  </table>
</div>