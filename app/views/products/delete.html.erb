
<%= link_to("<< Back to List", products_path(:budget_request_id => @budget_request.id), :class => 'back-link') %>

<div class="products delete">
  <h2>Delete Product</h2>

  <%= form_for(@product, :url => product_path(:budget_request_id => @budget_request.id), :method => 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this product?</p>

    <p class="reference-name"><%= f.object.description %></p>

    <div class="form-buttons">
      <%= f.submit("Delete Product") %>
    </div>

  <% end %>
</div>
