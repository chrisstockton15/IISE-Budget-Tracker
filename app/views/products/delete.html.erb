<html class="bg-light">

<body class="bg-light">
    <nav class="navbar sticky-top navbar-expand-sm navbar-light px-5 border-bottom bg-light">
        <%= link_to "IISE Budget Request Tracker", iise_budget_tracker_index_path, class: "navbar-brand" %>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item"><%= link_to "Home", iise_budget_tracker_index_path, class: "nav-link" %></li>
                <li class="nav-item"><%= link_to "Create New Request", new_iise_budget_tracker_path, class: "nav-link" %></li>
            </ul>
        </div>
    </nav>
    <div class="container p-2 my-2">
        <%= link_to("<< Back to List", products_path(:budget_request_id => @budget_request.id), :class => 'back-link') %>

        <div class="products delete">
            <h2>Delete Product</h2>

            <%= form_for(@product, :url => product_path(:budget_request_id => @budget_request.id), :method => 'delete') do |f| %>

            <p>Are you sure you want to permanently delete this product?</p>

            <p class="reference-name"><%= f.object.description %></p>

            <button class="form-buttons btn">
                <%= f.submit("Delete Product") %>
            </button>

            <% end %>
        </div>
    </div>
</body>

</html>